<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relatives_card"
    app:cardBackgroundColor="@color/backgroundColor"
    android:layout_margin="@dimen/margin2x"
    app:cardCornerRadius="16dp"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <!-- first item to appear in the recyclerview -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin2x">

        <TextView
            android:id="@+id/details_headline"
            style="@style/detailsHeadlineTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/relatives"/>

        <TextView
            android:id="@+id/relatives_text"
            style="@style/detailsTextStyle"
            android:layout_margin="@dimen/margin14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_headline"
            tools:text="Marlo Chandler-Jones (wife),  Polly (aunt),  Mrs. Chandler (mother-in-law), Keith Chandler, Ray Chandler, three unidentified others (brothers-in-law), unidentified father (deceased), Jackie Shorr (alleged mother  unconfirmed)." />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>