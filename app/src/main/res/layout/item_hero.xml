    android:id="@+id/card_hero"
    android:layout_width="275dp"
    android:layout_height="454dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="24dp"
    android:backgroundTint="@color/textColor"
