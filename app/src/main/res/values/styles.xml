<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="appearanceTitleTextStyle">
        <item name="android:layout_marginTop">@dimen/margin3x</item>
        <item name="android:layout_marginStart">@dimen/margin2x</item>
        <item name="android:fontFamily">@font/lora_meduim</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text18sp</item>
        <item name="android:textColor">@color/secondaryBrandColor</item>
    </style>

    <style name="appearanceTextStyle">
        <item name="android:layout_marginTop">@dimen/margin3x</item>
        <item name="android:layout_marginStart">@dimen/margin3x</item>
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text18sp</item>
        <item name="android:textColor">@color/brandColor</item>
    </style>

    <style name="nextButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/next</item>
        <item name="android:padding">@dimen/padding1x</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lora_bold</item>
        <item name="android:background">@drawable/next_button_background</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
    </style>

    <style name="detailsHeadlineTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text18sp</item>
    </style>

    <style name="detailsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:textColor">@color/brandColor</item>
        <item name="android:textSize">@dimen/text16sp</item>
    </style>


</resources>